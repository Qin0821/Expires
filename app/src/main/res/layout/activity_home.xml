<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="homeDTO"
                type="com.simpure.expires.data.CommodityHomeRepository"/>
        <variable name="commodityHomeActivity" type="com.simpure.expires.ui.CommodityHomeActivity"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.CommodityHomeActivity">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" android:id="@+id/relativeLayout">
            <!--<androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rlvBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_alignParentBottom="true"/>-->
            <com.yarolegovich.discretescrollview.DiscreteScrollView
                    android:id="@+id/rlvBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsv_orientation="horizontal" />
        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        </androidx.viewpager.widget.ViewPager>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:id="@+id/llBottomNavigation"
                      android:orientation="horizontal"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:background="#E6F"
                      app:layout_constraintRight_toRightOf="parent">

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>