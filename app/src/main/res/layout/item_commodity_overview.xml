<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.simpure.expires.model.CommodityEnum" />

        <variable
                name="isLoading"
                type="boolean" />

        <variable
                name="inSearch"
                type="boolean" />

        <variable
                name="commodity"
                type="com.simpure.expires.model.Commodity" />

        <variable
                name="callback"
                type="com.simpure.expires.ui.CommodityClickCallback" />
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:onClick="@{() -> callback.onClick(commodity)}"
            app:cardCornerRadius="10dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <View
                    android:id="@+id/label"
                    android:layout_width="8dp"
                    android:layout_height="80dp"
                    android:background="@color/commodity_label_blue"
                    android:visibility="@{inSearch ? View.VISIBLE : View.GONE }"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/tvExpireDay"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:text="@{commodity.calc()}"
                    android:textColor="@{inSearch ? @color/text_expires_days : commodity.type() == CommodityEnum.RED ? @color/commodity_label_red : commodity.type() == CommodityEnum.YELLOW ? @color/commodity_label_yellow : @color/commodity_label_blue }"
                    android:textSize="34sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/label"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/tvCommodityName"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{commodity.name}"
                    android:textColor="@color/text_expires_days"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvCommodityDesc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tvExpireDay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                    android:id="@+id/tvCommodityDesc"
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{commodity.formatExpirationDate()}"
                    android:textColor="@color/text_commodity_desc"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tvExpireDay"
                    app:layout_constraintTop_toBottomOf="@+id/tvCommodityName" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
