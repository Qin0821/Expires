<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@color/commodity_label_blue"
                app:srcCompat="@mipmap/icons_detail_inventoriesstatus_normal_grey" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Expire Date"
                android:textColor="@color/bg_comm_action"
                android:textSize="17sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="11 / 5 / 2020"
                android:textColor="@color/bg_comm_action"
                android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@color/commodity_label_blue"
                app:srcCompat="@mipmap/icons_detail_amount_grey" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Amount"
                android:textColor="@color/bg_comm_action"
                android:textSize="17sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="3"
                android:textColor="@color/bg_comm_action"
                android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>